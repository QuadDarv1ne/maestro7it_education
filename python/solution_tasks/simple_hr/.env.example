# Секретный ключ для Flask (генерируйте уникальный для production!)
SECRET_KEY=your-secret-key-here-change-in-production

# Режим отладки (используйте False в production)
DEBUG=False
TESTING=False

# Настройки MySQL базы данных
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_HOST=localhost
MYSQL_DB=simple_hr_db

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/simple_hr.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Настройки CORS (разрешенные origins)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Настройки Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day;50 per hour

# Настройки кэширования
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300

# Настройки Flask
FLASK_APP=run.py
FLASK_ENV=development
